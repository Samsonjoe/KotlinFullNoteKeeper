    <style name="RedGreenEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textColorHint">@android:color/holo_red_dark</item>
    </style>

    <style name="Theme.NoteKeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteKeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteKeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NoteTitle" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/pluralsightPlum</item>
    </style>

    <style name="BrandedText"  parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:color">@color/pluralsight_orange</item>
    </style>

    <style name="BrandedText.CourseName" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModuleName" parent="BrandedText">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AddFAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="srcCompat">@drawable/ic_add_white_24dp</item>
    </style>

